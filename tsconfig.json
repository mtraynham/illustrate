{
    "compileOnSave": false,
    "compilerOptions": {
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        // We're using Typescript for type-checking only
        // Webpack is using babel to further compile down to ES5
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        // Enable source map support for Webpack
        "sourceMap": true,

        /**
         * Experimental (required for ng-metadata)
         */
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        /**
         * Errors
         */
        "allowJs": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        // "strict" enables - noImplicitAny, noImplicitThis, alwaysStrict, strictNullChecks, strictFunctionTypes
        // NOTE: For noImplicitAny, TypeScript may complain about unknown vendor packages
        // Add them to `src/index.d.ts` or submit a pull request to Definitely Typed
        // https://github.com/DefinitelyTyped/DefinitelyTyped
        "strict": true,
        // disabled strict null checks, almost too strict...
        "strictNullChecks": false
    }
}